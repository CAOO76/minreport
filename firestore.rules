rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite la lectura de la colección 'requests' para el desarrollo del panel de admin.
    // TODO: Asegurar esta regla cuando se implemente la autenticación de administradores.
    match /requests/{request} {
      allow read: if true;
      allow write: if false; // La escritura debe ser controlada por el backend.
    }

    // Por defecto, el resto de las colecciones están cerradas hasta que se definan.
  }
}