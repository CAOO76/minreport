rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Los Admins tienen permiso de LECTURA a "requests" y TODO lo que contenga dentro.
    // La escritura se deniega para forzar que solo el backend pueda modificar datos.
    match /requests/{document=**} {
      allow read: if request.auth.token.admin == true;
      allow write: if false;
    }

    // Misma l√≥gica para las cuentas.
    match /accounts/{document=**} {
      allow read: if request.auth.token.admin == true;
      allow write: if false;
    }
  }
}