rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Solicitudes iniciales - permitir lectura y escritura (sin autenticaci贸n en desarrollo)
    // En producci贸n, agregar validaci贸n de token
    match /initial_requests/{document=**} {
      allow read, write: if true;
    }

    // Los Admins tienen permiso de LECTURA a "requests" y TODO lo que contenga dentro.
    // La escritura se deniega para forzar que solo el backend pueda modificar datos.
    match /requests/{document=**} {
      allow read: if request.auth.token.admin == true;
      allow write: if false;
    }

    // Misma l贸gica para las cuentas.
    match /accounts/{document=**} {
      allow read: if request.auth.token.admin == true;
      allow write: if false;
    }

    // ...existing code...
  }
}