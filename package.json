{
  "private": true,
  "type": "module",
  "scripts": {
    "emulators:start": "firebase emulators:start --import=./firebase-emulators-data --export-on-exit",
    "dev:client": "pnpm --filter client-app dev",
    "dev:admin": "pnpm --filter admin-app dev",
    "dev:public": "pnpm --filter public-site dev",
    "dev:plugin": "pnpm --filter test-plugin dev",
    "dev:services": "pnpm --filter \"./services/*\" dev",
    "dev": "concurrently --kill-others --kill-signal SIGINT --raw \"pnpm:emulators:start\" \"pnpm:dev:services\" \"pnpm:dev:client\" \"pnpm:dev:admin\" \"pnpm:dev:public\" \"pnpm:dev:plugin\"",
    "set-admin": "cross-env FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9190' ts-node services/functions/src/manage-admin.ts",
    "db:seed": "cross-env FIREBASE_AUTH_EMULATOR_HOST='127.0.0.1:9190' FIRESTORE_EMULATOR_HOST='127.0.0.1:8085' ts-node services/functions/src/seed-emulators.ts"
  },
  "pnpm": {
    "overrides": {
      "@types/node": "^20.0.0",
      "react": "18.2.0",
      "react-dom": "18.2.0"
    }
  },
  "dependencies": {
    "firebase-admin": "^13.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/eslint": "^9.6.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.44.0"
  }
}
